<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/forageableListFragment">

    <fragment
        android:id="@+id/forageableListFragment"
        android:name="com.d3if3055.assesment2.ui.ForageableListFragment"
        android:label="MyBhinneka" >
        <action
            android:id="@+id/action_forageableListFragment_to_addForageableFragment"
            app:destination="@id/addForageableFragment" />
        <action
            android:id="@+id/action_forageableListFragment_to_forageableDetailFragment"
            app:destination="@id/forageableDetailFragment" />
        <action
            android:id="@+id/action_forageableListFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/addForageableFragment"
        android:name="com.d3if3055.assesment2.ui.AddForageableFragment"
        android:label="Tambah Daftar Pahlawan"
        tools:layout="@layout/fragment_add_forageable" >
        <action
            android:id="@+id/action_addForageableFragment_to_forageableListFragment"
            app:destination="@id/forageableListFragment" />
        <argument
            android:name="id"
            app:argType="long"
            android:defaultValue="0L" />
        <action
            android:id="@+id/action_addForageableFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/forageableDetailFragment"
        android:name="com.d3if3055.assesment2.ui.ForageableDetailFragment"
        android:label="Pahlawan"
        tools:layout="@layout/fragment_forageable_detail" >
        <argument
            android:name="id"
            android:defaultValue="0L"
            app:argType="long" />
        <action
            android:id="@+id/action_forageableDetailFragment_to_addForageableFragment"
            app:destination="@id/addForageableFragment" />
        <action
            android:id="@+id/action_forageableDetailFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.d3if3055.assesment2.ui.Tentang"
        tools:layout="@layout/activity_tentang"/>
</navigation>
